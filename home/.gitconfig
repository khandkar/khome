[core]
        editor = /usr/bin/nvim
        excludesfile = ~/.gitignore_global
[color]
        ui = true
[cola]
	spellcheck = false
[init]
	defaultBranch = dominus # as in "dominus ramus"
#[filter "lfs"]
#	required = true
#	clean = git-lfs clean -- %f
