{
    "languageserver": {
        "rust": {
            "command": "rust-analyzer",
            "filetypes": ["rust"],
            "rootPatterns": ["Cargo.toml"]
        },
        "erlang": {
            "command": "erlang_ls",
            "filetypes": ["erlang"]
        },
        "ocaml-lsp": {
            "command": "opam",
            "args": ["config", "exec", "--", "ocamllsp"],
            "filetypes": ["ocaml", "reason"]
        }
    },
    "bash": {
        "command": "bash-language-server",
        "args": ["start"],
        "filetypes": ["sh"]
    }
}
