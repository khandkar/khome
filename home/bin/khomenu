#! /bin/sh

set -e

# TODO: Get theme-appropriate font and colors from some central config file.

FONT_NAME='Iosevka'
FONT_SIZE=20
FONT="$FONT_NAME:pixelsize=$FONT_SIZE:antialias=true:autohint=true"
BG_NORM='#3a3a3a'
FG_NORM='#dcdccc'
BG_SELECTED="$BG_NORM"
FG_SELECTED='#72d5a3'

dmenu \
    -i \
    -fn "$FONT" \
    -nb "$BG_NORM" \
    -nf "$FG_NORM" \
    -sb "$BG_SELECTED" \
    -sf "$FG_SELECTED" \
    $@
