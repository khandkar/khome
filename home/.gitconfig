[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool]
    prompt = false
